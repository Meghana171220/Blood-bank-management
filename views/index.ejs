<body style="background:url('/images/listing'); background-size: cover;">
    <form action="/login" method="post" class="box">
      
        <div class="container" style="width:500px;margin-top: 10%;background-color: rgb(221, 208, 208);">
         
        <h1>Login page</h1>
        <% if(message.length>0) { %>
          <div class="alert alert-danger col-sm-12"><%= message %></div>
        <% }%>
        <div class="form-group">
        <div class="tbox">
           
        <input name="username" value="" placeholder="Enter your username" required type="text" id="Username" class="form-control"></div></div>
        <div class="form-group">
        <div class="tbox">
           
        <input name="email" value=""placeholder="Enter your email" required type="email" id="email" class="form-control" ></div></div>
       
        <div class="form-group">
        <div class="tbox">
            
        <input name="password" value="" placeholder="Enter your password" required type="password" id="password" class="form-control"></div></div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button><br><br></div>
        <div class="form-group">
        <div class="href"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z"/>
            <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z"/>
          </svg>
          <button class="btn btn-primary"><a href="register" style="text-decoration: none; color: white;">Register here</a></button></div></div></div>
   <br>
  <br> </form>
